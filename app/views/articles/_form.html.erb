<%= name ||= 'Crear' %>
<h1><%= name %> articulo</h1>
<%= form_for(@article) do |f| %>
    <% @article.errors.full_messages.each do |message| %>
        <div class="alert alert-danger" role="alert">
          <i class="fa fa-exclamation-triangle"></i> <%= message %>
        </div>
    <% end %>
    <div class="form-group">
      <label for="exampleInputPassword1">Titulo</label>
      <%= f.text_field :title, placeholder: 'Titulo', class: 'form-control' %>
    </div>
    <div class="field">
      Portada: <%= f.file_field :cover %>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Detalle</label>
      <%= f.text_area :body, placeholder: 'Escribe aqui el articulo', style: 'height:250px;', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    </div>
<% end %>